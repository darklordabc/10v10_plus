<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/loading_screen.js" />
	</scripts>
	<Panel class="MegaDotaRoot">
		<Image id="mega_bg" src="file://{resources}/images/custom_game/12v12_background.png" />

		<Panel id="LoadingScreenTipsPanel">
			<Panel id="PrevTip" onactivate="prevHint()"/>
			<Image id="LoadingTipImage"/>
			<Panel id="LoadingTipTextWrap">
				<Label id="LoadingTipText"/>
			</Panel>
		
			<Panel class="NextTip" onactivate="nextHint()"/>
		</Panel>
		<Panel style="visibility: collapse;">
			<Image src="file://{resources}/images/custom_game/tips_icon/tip_chat_wheel.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/towers.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/kicktroll.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/disablehelp.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/fountain.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/helpus.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/itemtransfer.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/mute.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/nerfed.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/perks.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/raxes.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/respawn.png"/>
			<Image src="file://{resources}/images/custom_game/tips_icon/savefavs.png"/>
		</Panel>
	</Panel>
</root>
